<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.*?>

<!-- Window menu bar -->
<ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
    <items>
        <Button id="closeBtn" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
            <graphic>
                <ImageView pickOnBounds="true" smooth="false">
                    <image>
                        <Image url="/images/windowaction/close.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button id="squared" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
            <graphic>
                <ImageView pickOnBounds="true" smooth="false">
                    <image>
                        <Image url="/images/windowaction/maximize.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button id="squared" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
            <graphic>
                <ImageView pickOnBounds="true" smooth="false">
                    <image>
                        <Image url="/images/windowaction/reduce.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </items>
</ToolBar>