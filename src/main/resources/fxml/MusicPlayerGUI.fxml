<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<!-- Main Panel -->
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Add/Remove playlist buttons  -->
    <bottom>
        <fx:include source="PlaylistButtons.fxml" />
    </bottom>

    <!-- Playlist view -->
    <left>
        <fx:include source="PlaylistView.fxml" />
    </left>

    <!-- Table songs -->
    <center>
        <fx:include source="TableSongs.fxml" />
    </center>

    <top>
        <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <!-- Menu Bar -->
                <fx:include source="MenuBar.fxml" />

                <!-- Player action bar -->
                <fx:include source="ActionBar.fxml" />
            </children>
        </VBox>
    </top>
</BorderPane>
