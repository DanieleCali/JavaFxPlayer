<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

    <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>

             <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                 <graphic>
                     <ImageView pickOnBounds="true" smooth="false">
                         <image>
                             <Image url="/images/playeraction/lyrics.png" />
                         </image>
                     </ImageView>
                 </graphic>
             </Button>

             <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                 <graphic>
                     <ImageView pickOnBounds="true" smooth="false">
                         <image>
                             <Image url="/images/playeraction/play.png" />
                         </image>
                     </ImageView>
                 </graphic>
             </Button>

             <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                 <graphic>
                     <ImageView pickOnBounds="true" smooth="false">
                         <image>
                             <Image url="/images/playeraction/backward.png" />
                         </image>
                     </ImageView>
                 </graphic>
             </Button>

            <Slider prefHeight="50" HBox.hgrow="ALWAYS" />

             <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                 <graphic>
                     <ImageView pickOnBounds="true" smooth="false">
                         <image>
                             <Image url="/images/playeraction/forward.png" />
                         </image>
                     </ImageView>
                 </graphic>
             </Button>

             <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                 <graphic>
                     <ImageView pickOnBounds="true" smooth="false">
                         <image>
                             <Image url="/images/playeraction/shuffle.png" />
                         </image>
                     </ImageView>
                 </graphic>
             </Button>

            <Slider blockIncrement="0.1" max="1.0" orientation="VERTICAL" value="0.5">
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding></Slider>
         </children>
      </HBox>
   </bottom>

   <left>
      <TreeView editable="true" prefHeight="400.0" prefWidth="189.0" BorderPane.alignment="CENTER" />
   </left>

   <center>
      <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="42.0" text="N." />
          <TableColumn prefWidth="131.0" text="Titolo" />
            <TableColumn prefWidth="52.0" text="Durata" />
            <TableColumn prefWidth="185.0" text="Percorso" />
        </columns>
      </TableView>
   </center>

   <top>
      <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
         <children>
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
              <items>
                  <Button id="closeBtn" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                      <graphic>
                          <ImageView pickOnBounds="true" smooth="false">
                              <image>
                                  <Image url="/images/windowaction/close.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
                  <Button id="squared" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                      <graphic>
                          <ImageView pickOnBounds="true" smooth="false">
                              <image>
                                  <Image url="/images/windowaction/maximize.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
                  <Button id="squared" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                      <graphic>
                          <ImageView pickOnBounds="true" smooth="false">
                           <image>
                              <Image url="/images/windowaction/reduce.png" />
                           </image>
                          </ImageView>
                      </graphic>
                  </Button>
              </items>
            </ToolBar>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <HBox fillHeight="false" prefHeight="0.0" prefWidth="0.0">
                     <children>
                         <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                             <graphic>
                                 <ImageView pickOnBounds="true" preserveRatio="true">
                                     <image>
                                         <Image url="/images/playlistaction/remove.png" />
                                     </image>
                                 </ImageView>
                             </graphic>
                         </Button>

                         <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false">
                             <graphic>
                                 <ImageView pickOnBounds="true" preserveRatio="true">
                                     <image>
                                         <Image url="/images/playlistaction/add.png" />
                                     </image>
                                 </ImageView>
                             </graphic>
                         </Button>
                     </children>
                  </HBox>
                  <Pane minHeight="-Infinity" minWidth="-Infinity" prefHeight="0.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />

                  <HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="0.0" prefWidth="0.0">
                     <children>
                        <TextField nodeOrientation="RIGHT_TO_LEFT" prefColumnCount="18" promptText="Search" />
                     </children>
                  </HBox>

               </children>
            </HBox>
         </children>
      </VBox>
   </top>

</BorderPane>
